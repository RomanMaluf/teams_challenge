<% content_for :page_title do %>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= icon('fa-solid', 'briefcase')%>
        <%= link_to t('customer_accounts.list'), customer_accounts_url%>
      </li>
      <li class="breadcrumb-item">
        <%= t('customer_accounts.edit') %>
      </li>
      <li class="breadcrumb-item active">
        <%=@customer_account.name %>
      </li>

    </ol>
  </nav>
<% end %>

<div class="card mb-3">
  <div class="card-header">
    <h1 class="card-title mb-0 h5">
      <%= t('customer_accounts.form_title') %>
    </h1>
  </div>

  <div class="card-body">
    <div>
      <%= render partial: 'shared/error_messages', locals: { target: @customer_account } %>
    </div>
    <div>
      <%= form_with(model: @customer_account) do |f| %>
        <%= render partial: 'form', locals: { f: f } %>
        <div>
          <%= render partial: 'shared/edit_resource_links', locals: { f: f, collection_url: customer_accounts_url, resource: CustomerAccount } %>
        </div>
      <% end %>
    </div>
  </div>
</div>