<% content_for :table_filter do %>
  <%= search_form_for @search, url: users_path do |f| %>
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :email_cont, t('searches.user_email') %>
            <%= f.text_field :email_cont, class: "form-control js-quick-search-target js-filterable" %>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :name_cont, t('searches.user_name') %>
            <%= f.text_field :name_cont, class: "form-control js-filterable" %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <%= button_tag(t(:search), type: 'search', class: 'btn btn-success') %>
      </div>
  <% end  %>
<%end %>