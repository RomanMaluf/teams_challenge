<% content_for :page_title do %>
  <nav>
    <ol class="breadcrumb admin">
      <li class="breadcrumb-item active">
      <%= icon('fa-solid', 'briefcase')%>
      <%= link_to t('teams_users.list'), teams_users_path%>
      </li>
    </ol>
  </nav>
<% end %>

<%= render 'filter_table' %>
<div class="card mb-3">
  <div class="card-body">
    <table class="table">
      <thead>
        <th> User </th>
        <th> Account Name</th>
        <th> Stars At </th>
        <th> Ends At </th>
        <th> Dropped Out </th>
      </thead>
      <tbody>
        <% @teams_users.each do |team_user| %>
          <tr>
            <td><%=link_to team_user.email, user_path(team_user.user)%> </td>
            <td><%=team_user.name%> </td>
            <td><%=team_user.start_date.to_date%> </td>
            <td><%=team_user.end_date.to_date%> </td>
            <td><%=team_user.deleted_at.try(:to_date)%> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>