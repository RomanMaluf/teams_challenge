<% content_for :table_filter do %>
  <%= search_form_for @search, url: teams_users_path do |f| %>
      <div class="row">
        <div class="col-8 col-lg-4">
          <div class="form-group">
            <%= f.label :user_email_cont, t('searches.user_email') %>
            <%= f.text_field :user_email_cont, class: "form-control js-quick-search-target js-filterable" %>
          </div>
        </div>
        <div class="col-8 col-lg-4">
          <div class="form-group">
            <%= f.label :user_name_cont, t('searches.user_name') %>
            <%= f.text_field :user_name_cont, class: "form-control js-filterable" %>
          </div>
        </div>
        <div class="col-8 col-lg-4">
          <div class="form-group">
            <%= f.label :customer_account_name_cont, t('searches.customer_account_name') %>
            <%= f.text_field :customer_account_name_cont, class: "form-control js-filterable" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :start_date_eq, t('searches.team_users_start_date') %>
            <%= f.date_field :start_date_eq, class: "form-control js-filterable" %>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :end_date_eq, t('searches.team_users_end_date') %>
            <%= f.date_field :end_date_eq, class: "form-control js-filterable" %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <%= button_tag(t(:search), type: 'search', class: 'btn btn-success') %>
      </div>
  <% end  %>
<%end %>