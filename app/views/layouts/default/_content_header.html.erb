<% if content_for?(:page_title) || content_for?(:page_actions) %>
  <div class="content-header page-header">
    <div class="row align-items-center border-bottom mb-4">

      <% if content_for?(:page_title) %>
          <h1 class="h4 pl-0 col-lg-6">
            <%= yield :page_title %>
          </h1>
      <% end %>
      <% if content_for?(:page_actions) %>
        <div class="page-actions pr-0 col-lg-6">
          <%= yield :page_actions %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
