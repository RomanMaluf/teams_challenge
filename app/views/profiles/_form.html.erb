<div class="row">
  <div class="col-12 col-md-6">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <div class="form-group">
      <%= f.label :permissions %>
      <%= f.select :permission_ids, Permission.all.collect { |x| [x.name, x.id]}, {:include_hidden =>false}, multiple: 'multiple', 'data-controller': 'select', class: 'form-control select2' %>
    </div>
  </div>  
</div>